{
  "name": "gigflow-backend",
  "version": "1.0.0",
  "description": "GigFlow Marketplace Backend - Production-ready freelance platform",
  "main": "src/server.js",
  "scripts": {
    "build:frontend": "cd ../frontend && npm install && npm run build",
    "copy-frontend": "rm -rf public && cp -r ../frontend/dist public",
    "build": "npm run build:frontend && npm run copy-frontend",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "prod": "NODE_ENV=production node src/server.js"
  },
  "keywords": [
    "freelance",
    "marketplace",
    "gig",
    "mongodb",
    "express",
    "socket.io"
  ],
  "author": "Senior Full-Stack Engineer",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.1",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}